<Page x:Class="StGermain.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StGermain"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">
    <!--<Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:ResourceStyles />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>-->
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Black" Orientation="Vertical">
            <Image Source="/StGermain;component/Ressources/Images/StGermainBlack-nobg.png" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Height="150"
                   Width="150"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="Black">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <Image Source="/StGermain;component/Ressources/Images/home.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Accueil" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadAccueilClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/location.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Hôtel" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadHotelClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/double-bed.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Chambres" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadChambresClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/wallet.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Tarifs" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadTarifsClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/support.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Services" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadServicesClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/image-galery.png" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Height="30"
                        Width="30"/>
                    <Button Content="Galerie" 
                        Background="Black" 
                        Foreground="PaleGoldenrod" 
                        Click="LoadGalerieClick" 
                        HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/contact-us.png" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Height="30"
                        Width="30"/>
                    <Button Content="Contact" 
                        Background="Black" 
                        Foreground="PaleGoldenrod" 
                        Click="LoadContactClick" 
                        HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/StGermain;component/Ressources/Images/dinner.png" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Height="30"
                        Width="30"/>
                    <Button Content="Restaurant" 
                        Background="Black" 
                        Foreground="PaleGoldenrod" 
                        Click="LoadRestaurantClick" 
                        HorizontalContentAlignment="Stretch"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
        <Frame Grid.Row="2" x:Name="CurrentPage"/>
        <StackPanel Grid.Row="3" Background="Black">
            <TextBlock Text="Pied de page" 
                       Foreground="PaleGoldenrod" 
                       FontSize="23" Margin="32,32,0,0" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
