<Page x:Class="StGermain.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StGermain"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Black" Orientation="Vertical">
            <Image Source="/StGermain;component/Ressources/Icon/StGermainBlack-nobg.png" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Height="100"
                   Width="100"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="Black">
            <WrapPanel Name="MenuBar" Orientation="Horizontal" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" 
                       SizeChanged="WrapPanel_SizeChanged">
                <Border x:Name="MenuDeroulant"
                          Visibility="Collapsed">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Accueil" Click="LoadAccueilClick"/>
                            <MenuItem Header="Hôtel" Click="LoadHotelClick"/>
                            <MenuItem Header="Chambres" Click="LoadChambresClick"/>
                            <MenuItem Header="Tarifs" Click="LoadTarifsClick"/>
                            <MenuItem Header="Services" Click="LoadServicesClick"/>
                            <MenuItem Header="Galerie" Click="LoadGalerieClick"/>
                            <MenuItem Header="Contact" Click="LoadContactClick"/>
                            <MenuItem Header="Restaurant" Click="LoadRestaurantClick"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                    <Image Source="/StGermain;component/Ressources/Icon/MenuDeroulant.png" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Height="50"
                       Width="50"
                       Margin="5"
                       />
                </Border>
                <StackPanel Margin="5" Orientation="Horizontal" x:Name="home">
                    <Image Source="/StGermain;component/Ressources/Icon/home.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Accueil" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadAccueilClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="location">
                    <Image Source="/StGermain;component/Ressources/Icon/location.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Hôtel" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadHotelClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="doublebed">
                    <Image Source="/StGermain;component/Ressources/Icon/double-bed.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Chambres" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadChambresClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="wallet">
                    <Image Source="/StGermain;component/Ressources/Icon/wallet.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Tarifs" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadTarifsClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="support">
                    <Image Source="/StGermain;component/Ressources/Icon/support.png" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Height="30"
                           Width="30"/>
                    <Button Content="Services" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadServicesClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="image">
                    <Image Source="/StGermain;component/Ressources/Icon/image-galery.png" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Height="30"
                        Width="30"/>
                    <Button Content="Galerie" 
                        Background="Black" 
                        Foreground="PaleGoldenrod" 
                        Click="LoadGalerieClick" 
                        HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="contact">
                    <Image Source="/StGermain;component/Ressources/Icon/contact-us.png" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Height="30"
                        Width="30"/>
                    <Button Content="Contact" 
                        Background="Black" 
                        Foreground="PaleGoldenrod" 
                        Click="LoadContactClick" 
                        HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="dinner">
                    <Image Source="/StGermain;component/Ressources/Icon/dinner.png" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Height="30"
                        Width="30"/>
                    <Button Content="Restaurant" 
                        Background="Black" 
                        Foreground="PaleGoldenrod" 
                        Click="LoadRestaurantClick" 
                        HorizontalContentAlignment="Stretch"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
        <Frame Grid.Row="2" x:Name="CurrentPage"/>
        <StackPanel Grid.Row="3" Background="Black">
            <TextBlock Text="Pied de page" 
                       Foreground="PaleGoldenrod" 
                       FontSize="23" Margin="32,32,0,0" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
