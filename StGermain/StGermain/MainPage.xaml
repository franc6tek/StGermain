<Page x:Class="StGermain.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StGermain"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Black" Orientation="Vertical">
            <Image Source="/StGermain;component/Ressources/Icon/StGermainBlack-nobg.png" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Height="100"
                   Width="100"/>
        </StackPanel>
        <StackPanel Name="MenuBar" Grid.Row="1" Background="Black" SizeChanged="WrapPanel_SizeChanged">
            <WrapPanel  Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                       >
                <StackPanel x:Name="MenuPhone" Orientation="Horizontal"
                          Visibility="Collapsed">
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadAccueilClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/home.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadHotelClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/location.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadChambresClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/double-bed.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadTarifsClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/wallet.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadServicesClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/support.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadGalerieClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/image-galery.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadContactClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/contact-us.png"/>
                        </Button.Background>
                    </Button>
                    <Button Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadRestaurantClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/dinner.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" x:Name="home">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadAccueilClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/home.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Accueil" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadAccueilClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="location">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadHotelClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/location.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Hôtel" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadHotelClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="doublebed">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadChambresClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/double-bed.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Chambres" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadChambresClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="wallet">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadTarifsClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/wallet.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Tarifs" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadTarifsClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="support">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadServicesClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/support.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Services" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadServicesClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="image">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadGalerieClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/image-galery.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Galerie" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadGalerieClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="contact">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadContactClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/contact-us.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Contact" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadContactClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" x:Name="dinner">
                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Click="LoadRestaurantClick">
                        <Button.Background>
                            <ImageBrush ImageSource="/StGermain;component/Ressources/Icon/dinner.png"/>
                        </Button.Background>
                    </Button>
                    <Button 
                            Content="Restaurant" 
                            Background="Black" 
                            Foreground="PaleGoldenrod" 
                            Click="LoadRestaurantClick" 
                            HorizontalContentAlignment="Stretch"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="2" >
            <Frame x:Name="CurrentPage"/>
        </ScrollViewer>
        <StackPanel Grid.Row="3" Background="Black" Orientation="Vertical">
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="20">
                    <TextBlock TextWrapping="Wrap"
                       Text="Hôtel St Germain" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="24" 
                       Foreground="PaleGoldenrod"
                       Margin="2"/>
                    <TextBlock Text="Situé à Yaoundé dans le quartier Olimbé" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Foreground="white"
                       Margin="2"/>
                </StackPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="Suivez-nous" 
                           Foreground="PaleGoldenrod" 
                           FontSize="24" 
                           Margin="2" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                    <TextBlock Text="sur les réseaux sociaux" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Foreground="white"
                       Margin="2"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
