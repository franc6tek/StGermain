<Page
    x:Class="StGermain.Pages.Restaurant"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StGermain.Pages">

    <Grid MinHeight="600">
        <Grid.Background>
            <ImageBrush ImageSource="/StGermain;component/Images/Restaurant/restaurant.png" 
                            Stretch="UniformToFill" 
                            />
        </Grid.Background>
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap"
                       Text="Hôtel St Germain" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontFamily="Snap ITC"
                       FontSize="34" 
                       Foreground="white"
                       Margin="10"/>
            <TextBlock Text="Bienvenue au restaurant de l'hôtel St Germain!" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontFamily="Segoe Print"
                       FontSize="24" 
                       Foreground="white"
                       Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
