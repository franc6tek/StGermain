<Page
    x:Class="StGermain.Pages.hotel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StGermain.Pages">

    <ScrollViewer Background="SaddleBrown" VerticalAlignment="Center" HorizontalAlignment="Center"> 
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Padding="10" MinHeight="600">
                <StackPanel.Background>
                    <ImageBrush ImageSource="/StGermain;component/Images/Hotel/Hotel.png" 
                            Stretch="UniformToFill" 
                            />
                </StackPanel.Background>
                <TextBlock Text="Découvrez notre hôtel, un havre de confort et d'élégance!!" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           FontSize="24" 
                           FontFamily="Snap ITC"
                           Foreground="PaleGoldenrod"
                           Margin="10"
                           MaxWidth="400"
                       />
            </StackPanel>
            <StackPanel Orientation="Vertical" MaxWidth="500">
                <TextBlock TextWrapping="Wrap" 
                       Text="Bienvenue dans notre humble établissement!  " 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       FontFamily="Segoe Print"
                       FontSize="18" 
                       Foreground="PaleGoldenrod"
                       Margin="10"/>
                <TextBlock TextWrapping="Wrap"
                       Text="Hôtel St Germain" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       FontFamily="Snap ITC"
                       FontSize="34" 
                       Foreground="white"
                       Margin="10"/>
                <TextBlock TextWrapping="Wrap"
                       Text="Situé dans la ville de Yaoundé la capitale du cameroun et plus précisément à Olimbé. Nous vous offrons 20 chambres et 4 suites avec une vue spactaculaire sur le stade." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       FontFamily="Segoe Print"
                       FontSize="18" 
                       Foreground="PaleGoldenrod"
                       Margin="10"/>
                <TextBlock TextWrapping="Wrap"
                       Text="Doté d'un parking et de voiture pour faciliter votre arrivé, nous vous accueillons quelque soit l'heure." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       FontFamily="Segoe Print"
                       FontSize="18" 
                       Foreground="PaleGoldenrod"
                       Margin="10"/>
                <TextBlock TextWrapping="Wrap"
                       Text="Accueil ouvert en continu, 24 heures sur 24 heures." 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       FontSize="18" 
                       Foreground="PaleGoldenrod"
                       Margin="10"/>
            </StackPanel>
        </WrapPanel>
    </ScrollViewer>
</Page>
