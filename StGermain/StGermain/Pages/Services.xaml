<Page
    x:Class="StGermain.Pages.Services"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StGermain.Pages">

    <ScrollViewer Background="SaddleBrown">
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap"
                       Text="Nos Services" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontFamily="Snap ITC"
                       FontSize="34" 
                       Foreground="white"
                       Margin="10"/>
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Séminaire"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0"
                            Padding="5">
                        <TextBlock Text="Pour vos séminaires, 1 salle de réunion est à votre disposition pour 60 personnes"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Bar"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0"
                            Padding="5">
                        <TextBlock Text="A proximité de la réception, un bar est à votre disposition 7j/24h"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Salle de sport"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0"
                            Padding="5">
                        <TextBlock Text="Profitez de notre salle de sport toute équipée situeé au sous sol et accessible tous les jours de 6h à 20h"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Restaurant"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0"
                            Padding="5">
                        <TextBlock Text="Profitez de notre retaurant avec ces menus diversifiés"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
