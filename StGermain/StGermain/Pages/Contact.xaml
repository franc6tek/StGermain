<Page
    x:Class="StGermain.Pages.Contact"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StGermain.Pages">

    <ScrollViewer Background="SaddleBrown">
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <WebBrowser Name="contactWebBrowser" Width="400" Height="600" /> 
            <TextBlock Text="Contactez-nous à l'hôtel St Germain pour toute demande ou réservation!"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="24" 
                       Foreground="DarkCyan"
                       Width="400"
                       Height="600"/>
        </WrapPanel>
    </ScrollViewer>
</Page>
