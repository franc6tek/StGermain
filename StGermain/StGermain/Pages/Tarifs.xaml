<Page
    x:Class="StGermain.Pages.Tarifs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StGermain.Pages">

    <ScrollViewer Background="SaddleBrown" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Découvrez les tarifs compétitifs pour un séjour de rêve!" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="24" 
                       Foreground="PaleGoldenrod"/>
            <TextBlock TextWrapping="Wrap"
                       Text="Nos tarifs" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontFamily="Snap ITC"
                       FontSize="34" 
                       Foreground="white"
                       Margin="10"/>
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Chambre simple"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0">
                        <TextBlock Text="50 000 FCFA / nuit"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Chambre double"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0">
                        <TextBlock Text="50 000 FCFA / nuit"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Chambre supérieur"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0">
                        <TextBlock Text="50 000 FCFA / nuit"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
                <StackPanel Margin="20">
                    <Border Background="Black"
                            Height="50"
                            Width="200">
                        <TextBlock Text="Suite"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="18" 
                                   Foreground="PaleGoldenrod"/>
                    </Border>
                    <Border Background="White"
                            Height="400"
                            Width="200"
                            Margin="0,10,0,0">
                        <TextBlock Text="50 000 FCFA / nuit"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16" 
                                   Foreground="SaddleBrown"/>
                    </Border>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
